<?xml version="1.0" encoding="utf-8"?>
<resources>

  <style name="ActionButtonStyle" parent="Widget.MaterialComponents.Button">
    <item name="android:insetTop">0dp</item>
    <item name="android:insetBottom">0dp</item>
    <item name="rippleColor">@color/semiTransparent</item>
    <item name="cornerRadius">8dp</item>
    <item name="android:gravity">center</item>
    <item name="android:textColor">@color/color_state_list_action_button_text</item>
    <item name="android:fontFamily">sans-serif-medium</item>
    <item name="android:backgroundTint">@color/color_state_list_action_button</item>
    <item name="iconTint">@color/color_state_list_action_button_icon</item>
    <item name="android:letterSpacing">0</item>
  </style>

  <style name="ActionButtonStyle.Green">
    <item name="android:backgroundTint">@color/color_state_list_action_button_green</item>
  </style>

  <style name="ActionButtonStyle.Green.Stroke">
    <item name="strokeWidth">0.5dp</item>
    <item name="strokeColor">@color/appGreyLight</item>
  </style>

  <style name="ActionButtonStyle.Blue">
    <item name="android:backgroundTint">@color/color_state_list_action_button_blue</item>
  </style>

  <style name="ActionButtonStyle.Blue.Stroke">
    <item name="strokeWidth">0.5dp</item>
    <item name="strokeColor">@color/appGreyLight</item>
  </style>

  <style name="ActionButtonStyle.White">
    <item name="android:backgroundTint">@color/color_state_list_action_button_light</item>
    <item name="iconTint">@color/color_state_list_action_button_text_light</item>
    <item name="android:textColor">@color/color_state_list_action_button_text_light</item>
  </style>

  <style name="ActionButtonStyle.White.Stroke">
    <item name="strokeWidth">0.5dp</item>
    <item name="strokeColor">@color/color_state_list_action_button_stroke_light</item>
  </style>

  <style name="CardViewStyle" parent="Widget.MaterialComponents.CardView">
    <item name="android:clickable">true</item>
    <item name="android:focusable">true</item>
    <item name="cardBackgroundColor">@android:color/white</item>
    <item name="cardCornerRadius">8dp</item>
    <item name="cardElevation">4dp</item>
    <item name="rippleColor">@color/semiTransparentBlue</item>
    <item name="strokeColor">@color/appBlue</item>
    <item name="strokeWidth">1dp</item>
  </style>
</resources>